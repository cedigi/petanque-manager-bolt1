{
  "name": "petanque-manager",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build:web": "vite build",
    "serve:web": "vite preview",
    "start:electron": "electron .",
    "dev:electron": "concurrently \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run build:web && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest"
  },
  "build": {
    "appId": "com.cedigi.petanque-manager",
    "productName": "PÃ©tanque Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.cjs"
    ],
    "extraResources": [
      {
        "from": "public/logo.ico",
        "to": "logo.ico"
      },
      {
        "from": "public/logo1.png",
        "to": "logo1.png"
      }
    ],
    "win": {
      "icon": "public/logo.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "forceCodeSigning": false
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "systeminformation": "^5.27.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^5.4.2",
    "wait-on": "^8.0.3"
  },
  "license": "MIT"
}
